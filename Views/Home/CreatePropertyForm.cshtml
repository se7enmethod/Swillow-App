@{
    ViewData["Title"] = "Add a Property";
}

@model Property
<body style="background-image: url('http://3.bp.blogspot.com/_uGCoghnCSws/TMEy4m6JGZI/AAAAAAAAABQ/NXHhWkzq2Nk/s1600/Luxury+house+(3).jpg');  background-size: cover; background-repeat: no-repeat;
    background-attachment: fixed;" ><div class="row bg-light" style="padding:20px">
    <div class="col-12 text-center">
        <h1>Add a Property</h1>
    </div>
</div>

<div class="row bg-light">
    <div class="col-12 col-md-10 offset-md-1">
        <form asp-action="/addProperty" asp-controller="Home" method="post">

            <div class="form-group">
                <label asp-for="Title"></label>&nbsp<span asp-validation-for="Title" class="text-danger"></span>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ListingType"></label>&nbsp<span asp-validation-for="ListingType" class="error-message red"></span>
                <select asp-for="ListingType" class ="form-control">
                    <option value="Sale">For Sale</option>
                    <option value="Rent">For Rent</option>
                </select>
                @* <input asp-for="ListingType" class="form-control" /> *@
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>&nbsp<span asp-validation-for="Address" class="error-message" style="color: red"></span>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>&nbsp<span asp-validation-for="Description" class="error-message" style="color: red"></span>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>&nbsp<span asp-validation-for="Price" class="error-message" style="color: red"></span>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Bedrooms"></label>&nbsp<span asp-validation-for="Bedrooms" class="error-message" style="color: red"></span>
                <input asp-for="Bedrooms" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Baths"></label>&nbsp<span asp-validation-for="Baths" class="error-message" style="color: red"></span>
                <input asp-for="Baths" class="form-control" />
				
            </div>
            <div class="form-group">
                <label asp-for="SqFt"></label>&nbsp<span asp-validation-for="SqFt" class="error-message" style="color: red"></span>
                <input asp-for="SqFt" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LotSize"></label>&nbsp<span asp-validation-for="LotSize" class="error-message" style="color: red"></span>
                <input asp-for="LotSize" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>&nbsp<span asp-validation-for="Year" class="error-message" style="color: red"></span>
                <input asp-for="Year" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl"></label>&nbsp<span asp-validation-for="ImgUrl"></span>
                <input asp-for="ImgUrl" class="form-control" />
            </div>

            <div class="form-group text-right">
                <button class="btn btn-outline-secondary">Upload</button>
            </div>
        </form>
    </div>
</div>
</body>

