@{
    ViewData["Title"] = "Home";
}

@model List<Property>

<body style="background-image: url('http://3.bp.blogspot.com/_uGCoghnCSws/TMEy4m6JGZI/AAAAAAAAABQ/NXHhWkzq2Nk/s1600/Luxury+house+(3).jpg');  background-size: cover; background-repeat: no-repeat;
    background-attachment: fixed;" >  
	<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
  <div class="col-md-10 p-lg-5 mx-auto my-5">
    <h1 class="display-4 font-weight-normal">Welcome To Swillow</h1>
    <h3 class="display-5 font-weight-normal">Find Your Dream Home!</h3>
    <p class="lead font-weight-normal">We are so glad you are here! Click below to view our current list of properties for sale. Sign in to add your own or to save to favorites. </p>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>

@{ int? uid = Context.Session.GetInt32("UserId"); }
        @if (uid != null)
        {
<div class="col-md-10 p-lg-5 mx-auto my-2">
        <a asp-action="Dashboard" class="btn btn-primary my-2" style="margin-left:10px">View All Properties</a>
</div>
		}else{
		<div class="row">
    <div class="col-12 text-center bg-light" style="padding:20px">
        <h1>Register and Login</h1>
    </div>
</div>

<div class="row bg-light">
    <div class="col-12 col-md-6">
        <partial name="RegistrationPartial"></partial>
    </div>
    <div class="col-12 col-md-6 bg-light">
        <partial name="LoginPartial"></partial>
    </div>
</div>
		}
</body>

